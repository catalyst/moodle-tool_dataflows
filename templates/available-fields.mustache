{{!
    @template tool_dataflows/available-fields

    Displays form element containg all available fields.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }

}}
<div class="form-group row">
    <div class="col-md-3">
        <p>{{# str }} available_fields, tool_dataflows {{/ str }}</p>
    </div>
    <div class="fieldcontainer col-md-9 form-inline felement">
        <p>{{# str }} available_fields_help, tool_dataflows, <code>${<span></span>{ dataflow.name }}</code> {{/ str }}</p>
        {{#groups}}
            <span class="badge badge-info rounded-0 mb-1 mr-1" type="button" data-toggle="collapse" data-target="#collapsableGroup-{{name}}" aria-expanded="false" aria-controls="collapseExample">
                {{name}}
            </span>
            <br/>
            <div class="collapse" id="collapsableGroup-{{name}}">
                <div class="fieldgroup">
                    {{#fields}}
                        <span class="badge badge-dark rounded-0 mb-1 mr-1" title="{{ title }}" data-expression="{{fullexpression}}" style="cursor: pointer;">{{ text }}</span>
                        <span class="badge badge-secondary rounded-0 mb-1 mr-1" type="button" data-toggle="collapse" data-target="#{{collapsibleid}}">
                            {{upperfieldname}}
                        </span>
                        {{#subfields}}
                            <span class="badge badge-success rounded-0 mb-1 mr-1 collapse" id="{{collapsibleid}}" data-expression="{{fullexpression}}" style="cursor: pointer;">
                                {{text}}
                            </span>
                        {{/subfields}}
                    {{/fields}}
                </div>
            </div>
        {{/groups}}
    </div>
</div>
{{#js}}
    require(['core/toast', 'core/str'], function(addToast, getString) {
        const expression = document.querySelectorAll('[data-expression]');
        for (let i = 0; i < expression.length; i++) {
            expression[i].addEventListener('click', e => {
                const copiedExpression = e.target.dataset.expression;
                navigator.clipboard.writeText(copiedExpression);
                addToast.add(getString.get_string('successfullycopiedtoclipboard', 'tool_dataflows'), {
                    type: 'info',
                    autohide: true,
                    closeButton: true,
                });
            })
        }
    });
{{/js}}
