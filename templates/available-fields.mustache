{{!
    @template tool_dataflows/available-fields

    Displays form element containg all available fields.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "groups": [
            {
                "name": "env",
                "open": "open",
                "fields": [
                    {
                        "text": "level2a",
                        "expression": "env.level2a",
                        "fields": [],
                        "leaf": 1
                    },
                    {
                        "text": "level2b",
                        "expression": "env.level2b",
                        "fields": [
                            {
                                "text": "level3a",
                                "expression": "env.level2b.level3a",
                                "fields": [],
                                "leaf": 1
                            },
                            {
                                "text": "level3b",
                                "expression": "env.level2b.level3b",
                                "fields": [],
                                "leaf": 1
                            }
                        ]
                    }
                ]
            }
        ]
    }

}}
<div class="form-group row">
    <div class="col-md-3">
        <p>{{# str }} available_fields, tool_dataflows {{/ str }}</p>
    </div>
    <div class="fieldcontainer col-md-9 felement">
        <p>{{# str }} available_fields_help, tool_dataflows, <code>${<span></span>{ dataflow.name }}</code> {{/ str }}</p>
        <div class="tool_dataflow-tags">
            {{#groups}}
                {{>tool_dataflows/tags}}
            {{/groups}}
        </div>
    </div>
</div>
{{#js}}
    require(['core/toast', 'core/str'], function(addToast, getString) {
        let expression = document.querySelectorAll('.leaf-expression');
        for (let i = 0; i < expression.length; i++) {
            expression[i].addEventListener('click', e => {
                let exp = e.target.closest('.leaf');
                let text = exp.getElementsByTagName('textarea')[0]
                text.select();
                document.execCommand("copy");

                addToast.add(getString.get_string('successfullycopiedtoclipboard', 'tool_dataflows', text.value), {
                    type: 'info',
                    autohide: true,
                    closeButton: true,
                });
            });
        }
    });
{{/js}}
